                       <p>Dear<strong> {!$User.FirstName}&nbsp;{!$User.LastName},</strong><br/><br/>
                        
                        <apex:outputText value="{!applicationText}" escape="false"/>
                        </p>
                    </div>
                </div>
                 <apex:form >
                  <apex:commandLink styleClass="btn save-btn pull-right" action="{!Accepetoffer}" value="Proceed to Accept Offer"  rendered="{!switchindex=true}" >
                
                  </apex:commandLink>
                   </apex:form> 
            </div>
        </div>
    </div>
    <apex:form >
    
       
        <apex:actionFunction action="{!saveAllData}" immediate="false" name="saveandexit" id="logoutSave" oncomplete="redirectBack();" />
       </apex:form>    
    <!-- DASHBOARD END -->
    <c:ChangePasswordComponent />
    <!-- FOOTER START -->
    <c:FooterComponent_1 />
    <apex:outputPanel id="JSPanel">
    <script>
         function redirectBack() {             
            window.location.href = "{!$Site.Prefix}/secur/logout.jsp";
         }
    </script>
</apex:outputPanel>
