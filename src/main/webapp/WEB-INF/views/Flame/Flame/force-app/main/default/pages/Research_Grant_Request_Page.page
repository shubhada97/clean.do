<apex:page docType="html-5.0" controller="Researchgrantcontroller"  standardStylesheets="true" lightningStylesheets="true" showHeader="false" sidebar="false" cache="false" title="FLAME University - The Pioneers of Liberal Education in India" >       
    <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" />
    <!-- VF componen which hold the common java script and css for all pages -->
    <apex:slds />
    <c:Flame_HeadResource />  
               
     <meta charset='UTF-8'/>
    <link rel='stylesheet' href='styles.css'/>
    <meta name='viewport'
          content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
    
    
    <script type='text/javascript' src='http://code.jquery.com/jquery-1.11.1.min.js'></script> 
    <script type='text/javascript' src='//cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js'></script> 
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.4/css/jquery.dataTables.css"/> 
    
   
    <script>
    j$ = jQuery.noConflict();
    j$(document).ready( function () {
        var contactTable = j$('[id$="contacttable"]').DataTable({
            order: [[2, 'asc']],
            "searching": false,
            "info": true,         
            "lengthChange":true 
        });
        
        
    });
    
    function assignEditId(editId){
        //alert('JS called'+editId)
        recordedit(editId);
    }
     <!-- pass the download button id in java script.-->  
      function assigndownloadId(downloadId){
       // alert('JS called'+downloadId)
        recorddownload(downloadId);
    }   
    </script> 
    
    
    
    
    <style>
        .navbar .navbar-nav > .flm_Assist > a, .navbar .navbar-nav > .flm_Assist > a:focus, .navbar .navbar-nav > .flm_Assist > a:hover {
        color: #fff !important;
        background-color: #fbb601 !important;
        padding-left: 10px;
        }              
        .hideComponent{
        display:none;
        }
        .text-content table {
        box-sizing: border-box;
        width: 100%;
        max-width: 100%;
        border-collapse: collapse;
        border: solid #e0e0dc;
        border-width: 1px 0 0 1px;
        }
        table {
        margin-bottom: 24px;
        }
        .text-content td, .text-content th {
        border: solid #e0e0dc;
        border-width: 0 1px 1px 0;
        padding: 6px 8px;
        text-align: left;
        }
        .dining-table tr th, td {
        padding:4px;
        }
        .table-nonfluid {
        width: auto !important;
        }
    </style>      
   
    <body>
        <apex:form id="IdFrm" html-autocomplete="off">
        <!-- pass the edit button id in java script.-->
            <apex:actionFunction name="recordedit" action="{!recordEdited}" reRender="">
             <apex:param assignTo="{!editId}" name="editIDs" value=""/>   
             </apex:actionFunction>
             <!-- pass the download button id in java script.-->
            <apex:actionFunction name="recorddownload" action="{!download}" reRender="">
             <apex:param assignTo="{!downloadId}" name="downloadIDs" value=""/>   
             </apex:actionFunction>
            <!-- Left Panel -->
           <aside id="left-panel" class="left-panel">
                <c:Flame_SideMenuBar />
            </aside>
            <!-- Left Panel -->            
            <!-- Right Panel -->            
           <div id="right-panel" class="right-panel">                
                <!-- Header-->
                <c:Flame_HeaderBar />
                <!-- Header-->                                
                <!--Main container -->  
                <div class="content mt-3">                                                         
                  <div class="col-lg-12">
                        <div class="sub-heading">
                            <h6>Research Grant Request</h6>
                        </div>
                        
                        
                        <div class="assist-content-area">
                            <div class="services-content" style="padding-bottom:75px;"> 
                           <apex:pageMessages id="errors"/>
                        
                            <div class="table-responsive"> 
                            <div class=" float-left">   
                            <apex:commandButton value="New Research Grant Request" action="{!Newresearchgrant}" styleClass="slds-button slds-button_neutral saveBtn" />
                            </div>        
                            <br/><br/> 
                                                         
                              <table id="contacttable" class="table table-striped table-bordered table-sm table-list" cellspacing="0" width="100%">
                                 <thead>       
                                  <tr >
                                                          
                                    <th  scope="col">Date of Application</th>
                                    <th  scope="col">Project Name</th>
                                    <th  scope="col">Principal Faculty</th> 
                                    <th  scope="col" >Requested Fund</th>
                                    <th  scope="col">L1 Approval</th>
                                    <th  scope="col">L1 Approval Fund</th>
                                    <th  scope="col">L1 Comment</th>
                                    <th  scope="col">L2 Approval</th>
                                    <th  scope="col">L2 Approval Fund</th>
                                    <th  scope="col">L2 Comment</th> 
                                    <th  scope="col"> </th>
                                    <th  scope="col"></th> 
                                 </tr>                                 
                                </thead>
                                <tbody>
                                <apex:repeat value="{!Researchs}" var="rechs">  
                                <tr>
                                 
                                <td><apex:outputField value="{!rechs.Application_Date__c}" /></td>
                                <td><apex:outputField value="{!rechs.Title_of_publication__c}" /></td>
                                <td><apex:outputField value="{!rechs.Principal_Faculty__c}" /></td>
                                <td><apex:outputField value="{!rechs.Total_Cost__c}" /></td>
                                <td><apex:outputField value="{!rechs.Dean_Approval__c}" /></td>
                                <td><apex:outputField value="{!rechs.Dean_Funding__c}" /></td>
                                <td><apex:outputField value="{!rechs.Dean_Reason__c}" /></td>
                                <td><apex:outputField value="{!rechs.VC_Approval__c}" /></td>
                                <td><apex:outputField value="{!rechs.VC_Funding__c}" /></td>
                                <td><apex:outputField value="{!rechs.VC_Reason__c}" /></td>
                                
                                <apex:outputPanel >
                                <td> <apex:commandButton value="Edit" onclick="assignEditId('{!rechs.id}');return false;" styleClass="slds-m-top_xx-small slds-button slds-button_neutral btnSubmit" style="margin:0 auto;" disabled="{!rechs.Dean_Approval__c == 'Approved' && rechs.VC_Approval__c == 'Approved'}">  
                                 <apex:param name="{!rechs.id}" value="{!rechs.id}" assignTo="{!editId}"/>
                                 </apex:commandButton></td>
                                </apex:outputPanel>
                                <td><apex:commandLink value="Download" action="{!download}" onclick="assigndownloadId('{!rechs.id}');return false;" styleClass="slds-m-top_xx-small slds-button slds-button_neutral btnSubmit" style="margin:0 auto;" target="_blank" >  
                                    <!--<apex:param name="{!rechs.id}" value="{!rechs.id}" assignTo="{!editId}"/>-->
                                    </apex:commandLink></td>
                                
                                
                                </tr> 
                                </apex:repeat>      
                                </tbody>           
                                  
                                    </table>  
                                   </div> 
                                                                
                            </div>
                        </div>
                    </div>               
                </div>
                <!--Main container -->
           </div><!-- /#right-panel -->            
            <!-- Right Panel --> 
        
        </apex:form>        
        <c:Flame_FooterResource />
    </body> 
      <script type="text/javascript">
        $(document).ready(function(){
           $(".flm_research_ele").addClass("active");
           $(".flm_research_ele").addClass("show");
           $(".flm_research_ele > .sub-menu").addClass("show");
           $(".flm_researchResGrant_ele").addClass("active");

           $(".flm_menu").click(function(){
                $(".flm_menu").removeClass("show");
                $(".flm_menu > .sub-menu").removeClass("show");
                
           })
        });
    </script>    
</apex:page>