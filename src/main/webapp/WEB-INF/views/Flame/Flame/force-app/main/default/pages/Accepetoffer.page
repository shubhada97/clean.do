dilogbox.style.left = (winW/2) -(550* .5) +"px";
dilogbox.style.top = "100px";
}

this.yes = function(dilogbox){
    alert(1);
 document.getElementById('dilogbox').style.display = "none";
 document.getElementById('white-background').style.display = "none";
