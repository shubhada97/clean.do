<body>
<!-- HEADER START -->
<div class="header">
    <div class="container">
        <div class="brand"><a href="javascript:void(0)">           
            <apex:image url="{!URLFOR($Resource.flameZip, 'img/logo.png')}"/></a>
        </div>
      <c:FU_TopNavigation_1 />  
    </div>
</div>
<!-- HEADER END -->

<!-- DASHBOARD START -->
<div class="main-dashboard">
    <div class="container">
      <div class="dashboard-inner">
      <apex:form >
        <c:TabsPanel3_1 />
         </apex:form>
        
         <div class="tab-container">
            <div class="tab-content active" id="tab2">
              </div>  
            </div>
            
            <div> 
            <apex:outputText id="onlinePaymentError" value="{!paymentErrorMsg}" style="Color:red;"/>
           <p>Program applied for :<strong> {!app.Program__r.Name} </strong> </p>
            <p></p>
            
            <p>Dear <b>{!$User.FirstName} {!$User.LastName}</b>,</p>
            </div> 
            
            <div class="form-group">
             <!-- <label for="Perferrd" align="Center" style="color:red;"> <u> Enrollment Deposit Text :  </u></label><br/> -->
