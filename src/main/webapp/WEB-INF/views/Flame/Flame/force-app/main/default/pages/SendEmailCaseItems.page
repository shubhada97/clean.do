        <tbody>
            <tr>
                <td style="padding:10px; font-size: 12px;">
                   <apex:image url="{!URLFOR($Resource.flameZip, 'img/logo.png')}" width="150px;"/>
                </td>
               
            </tr>
        </tbody>
    </table>      
