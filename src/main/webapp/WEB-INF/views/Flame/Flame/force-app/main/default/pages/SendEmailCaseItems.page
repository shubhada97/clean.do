     <table  cellpadding="0" cellspacing="0" style="page-break-inside:auto;font-family:sans-serif; width:100%;margin-top:10px; border: 1px solid #525252;">
       
        <tbody>
        <tr>
             <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Name of the Faculty</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                   <apex:outputtext value="{!userContact.Name}"/>  
                </td>
                
                  <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Date</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                   <apex:outputText value="{0,date,dd/MM/yyyy}"> <apex:param value="{!today()}" /></apex:outputText> 
                </td>
         </tr>
         <tr>
             <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Faculty</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                <apex:outputtext value="{!userContact.Faculty__c}"/> 
                </td>
                
                  <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Type</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                  <apex:outputtext value="{!objCase.BR_Type__c}"/> 
                </td>
         </tr>
         <tr>
             <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Contact Number</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                <apex:outputtext value="{!userContact.MobilePhone}"/> 
                </td>
                
                  <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Course</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                 <apex:outputtext value="{!objCase.BR_Course__c}"/> 
                </td>
         </tr>
         
          <tr>
             <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Email ID</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                   <apex:outputtext value="{!userContact.Email}"/> 
                </td>
                
                  <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                    <strong>Number of Students</strong>
                </td>
                <td style="padding:5px; font-size: 12px; border-right: 1px solid #525252; border-bottom: 1px solid #525252;" width="20%">
                  <apex:outputtext value="{!objCase.BR_Number_of_Students__c}"/> 
                </td>
         </tr>
        </tbody>
    </table>
    
   <br></br>
                <table cellpadding="0" cellspacing="0" style="width:100%; border: 2px solid #d3d3d3;">
                       
                        <tr>
                          
                            <th style="background: #525252;color: #fff;font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #d3d3d3;"> Title </th>
                            <th style="background: #525252;color: #fff;font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #d3d3d3;">Author</th>
                            <th style="background: #525252;color: #fff;font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #d3d3d3;">Publisher</th>
                            <th style="background: #525252;color: #fff;font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #d3d3d3;">Year / Ed.</th>
                            <th style="background: #525252;color: #fff;font-size: 11px;padding:5px; text-align:center; ">ISBN</th>
                            <th style="background: #525252;color: #fff;font-size: 11px;padding:5px; text-align:center; ">Required Copies</th>
                        </tr>
                       <apex:repeat value="{!itemList}" var="objItem">
                            <tr>
                               
                                <td style="font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #525252;">
                                       <apex:outputField value="{!objItem.BR_Title__c}" styleClass="form-control"/>
                                </td>
                                <td style="font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #525252;">
                                     <apex:outputField value="{!objItem.BR_Author__c}" styleClass="form-control"/> 
                                </td>
                                <td style="font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #525252;">
                                    <apex:outputField value="{!objItem.BR_Publisher__c}" styleClass="form-control"/> 
                                </td>
                                <td style="font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #525252;">
                                     <apex:outputField value="{!objItem.BR_Year_Ed__c}" styleClass="form-control"/> 
                                </td>
                                <td style="font-size: 11px;padding:5px; text-align:center;">
                                    <apex:outputField value="{!objItem.BR_ISBN__c}" styleClass="form-control"/> 
                                </td>
                                 <td style="font-size: 11px;padding:5px; text-align:center; border-right: 1px solid #525252;">
                                   <apex:outputField value="{!objItem.BR_Required_Copies__c}" styleClass="form-control"/> 
                                </td>
                            </tr>
                      </apex:repeat> 
                </table>
            
</apex:form>               
</body>
</html>
</apex:page>