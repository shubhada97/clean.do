<apex:page docType="html-5.0" controller="Flame_AssistAC" action="{!diningMenuStatus}" standardStylesheets="true" lightningStylesheets="true" showHeader="false" sidebar="false" cache="false" title="FLAME University - The Pioneers of Liberal Education in India" >       
    <!-- VF componen which hold the common java script and css for all pages -->
    <apex:slds />
    <c:Flame_HeadResource />         
    
    
    <style>
    .navbar .navbar-nav > .flm_Assist > a, .navbar .navbar-nav > .flm_Assist > a:focus, .navbar .navbar-nav > .flm_Assist > a:hover {
        color: #fff !important;
        background-color: #fbb601 !important;
        padding-left: 10px;
    }                
        .hideComponent{
        display:none;
        }
        .text-content table {
        box-sizing: border-box;
        width: 100%;
        max-width: 100%;
        border-collapse: collapse;
        border: solid #e0e0dc;
        border-width: 1px 0 0 1px;
        }
        table {
        margin-bottom: 24px;
        }
        .text-content td, .text-content th {
        border: solid #e0e0dc;
        border-width: 0 1px 1px 0;
        padding: 6px 8px;
        text-align: left;
        }
        .dining-table tr th, td {
        padding:4px;
        }
        
    </style>      
    
    <body>
        <apex:form id="IdFrm" html-autocomplete="off">
            <!-- Left Panel -->
            <aside id="left-panel" class="left-panel">
                <c:Flame_SideMenuBar />
            </aside>
            <!-- Left Panel -->            
            <!-- Right Panel -->            
            <div id="right-panel" class="right-panel">                
                <!-- Header-->
                <c:Flame_HeaderBar />
                <!-- Header-->                                
                <!--Main container -->  
                <div class="content mt-3">                                                         
                    <div class="col-lg-12"> 
                        <div class="sub-heading">
                            <h6>Dining Menu</h6>
                        </div>
                        <div class="assist-content-area">
                            <div class="services-content" style="padding-bottom:75px;">                                
                                <!-- Show Dining details start -->
                                <apex:outputPanel id="IdDiningDetails" >
                                    <apex:outputPanel rendered="{!IsDining}">                                        
                                        <div class="table-responsive">
                                            <table border="1" width="100%" class="dining-table">                                           
                                                <tr style="text-align : center;">
                                                    <th>DAY</th>
                                                    <th>BREAKFAST</th>
                                                    <th>LUNCH</th>
                                                    <th>EVENING SNACKS</th>
                                                    <th>DINNER</th>             
                                                </tr>                                                                            
                                                
                                                <apex:repeat id="myRepeatHeader" value="{!weekList}" var="week" rendered="{!bool}">         
                                                    <apex:variable var="count" value="{!1}"/>                                                                                               
                                                    <apex:repeat id="contactDetails" value="{!diningMap[week]}" var="dinList">                                  
                                                        <tr style="text-align : center;">                                    
                                                            <apex:outputText rendered="{!count==1}">                                                                
                                                                <td rowspan="{!(modulecountMap[week])}" style="text-align:center">{!week}<br/><apex:outputText value="{0,date,dd' 'MMMMM' 'yyyy}">
                                                                    <apex:param value="{!dinList.Date__c}" /> 
                                                                    </apex:outputText>
                                                                    <br/><b>{!dinList.Comment__c}</b>
                                                                </td>
                                                            </apex:outputText>                      
                                                            <apex:outputText rendered="{!if(week == dinList.Name, true, false)}">                                                    
                                                                <td><apex:outputText value="{!dinList.BreakFast__c}"/></td>
                                                                <td><apex:outputText value="{!dinList.Lunch__c }"/></td>
                                                                <td><apex:outputText value="{!dinList.Evening_Snacks__c}"/></td>
                                                                <td><apex:outputText value="{!dinList.Dinner__c}"/></td>
                                                            </apex:outputText>  
                                                            <apex:variable var="count" value="{!count+1}"/>
                                                        </tr>
                                                    </apex:repeat>
                                                </apex:repeat>                                          
                                            </table>
                                        </div>
                                        <center><apex:outputpanel Style="font-weight:bold;" rendered="{!!bool}">No Menu Present. </apex:outputpanel></center>
                                    </apex:outputPanel>
                                </apex:outputPanel>
                                <!-- Show Dining details End -->
                            </div>
                        </div>
                    </div>               
                </div>
                <!--Main container -->
            </div><!-- /#right-panel -->                        
            <apex:actionStatus id="IdStatus">
                <apex:facet name="start">
                    <div class="loadingBG" >
                        &nbsp;
                    </div>  
                    <div class="loadingBGP" >                        
                        <i class="fa fa-spinner fa-spin" style="font-size:48px;color:#fbb601;"></i>                        
                    </div>            
                </apex:facet>           
            </apex:actionStatus>
        </apex:form>        
        <c:Flame_FooterResource />
    </body>       
</apex:page>