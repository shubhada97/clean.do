<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	
    <aura:attribute name="mapMarkers" type="Object" access="global"/>
    <aura:attribute name="zoomLevel" type="Integer" default="4"/>
    <aura:attribute name="mapCenter" type="Object" default="India"/>
    
    <aura:attribute name="latitude" type="Decimal" />
    <aura:attribute name="longitude" type="Decimal" />
    <!-- handlers-->
    
     <aura:handler name="init" value="{! this }" action="{! c.doInit }"/>
<div class="slds-col" style="width:100%; hight:100%;">
                      
    <!-- the map component -->
    
    <lightning:map mapMarkers="{! v.mapMarkers }" 
        center ="{!v.mapCenter}"
        zoomLevel="{!v.zoomLevel}" />
    <b></b>
    <lightning:button variant="base" label="LogIn" title="Base action" onclick="{! c.saveRecord }"/>
    <lightning:button variant="base" label="LogOut" title="Base action" onclick="{! c.saveRecord }"/>
    </div>
    
</aura:component>