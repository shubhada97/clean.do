<apex:page Controller="KnowledgeSearchController" docType="html-5.0" standardStylesheets="true" lightningStylesheets="true" showHeader="false" sidebar="false" cache="false" title="FLAME University - The Pioneers of Liberal Education in India">
  
    <apex:slds />
    <c:Flame_HeadResource /> 
    <style>
        .navbar .navbar-nav > .flm_Home > a,
        .navbar .navbar-nav > .flm_Home > a:focus,
         .navbar .navbar-nav > .flm_Home > a:hover 
       {
            color: #fff !important;
          //  background-color: #fbb601 !important; 
            padding-left: 10px;
        }
       
        @media (max-width: 769px) {
            .latest-news .image-effect {
                min-height: auto;
            }
            .latest-events {
                min-height: auto;
            }
            .home-carousel h3 {
                font-size: 14px;
                line-height: 18px;
            }
            .main-slider a table tr td img {
                min-height: auto;
            }
        }
        
       @media screen and (max-width: 769px) {
             .announcements-section .title {
                 font-size: 20px;
             }
             .news-section .title {
                 font-size: 20px;
             }
             .events-section .title {
                 font-size: 20px;
             }
             .mt-3 {
                 margin-top: 5px !important;
             }
             .carousel-caption {
                padding-top: 10px;
                padding-bottom: 10px;
            }
         }
        
            
    </style>
    <body>
        <apex:form id="IdFrm">
            <!-- Left Panel -->
            <aside id="left-panel" class="left-panel">
                <c:Flame_SideMenuBar />
            </aside>  
            <!-- Left Panel -->            
            <!-- Right Panel -->            
            <div id="right-panel" class="right-panel">                
                <!-- Header-->
                <c:Flame_HeaderBar />
                <!-- Header--> 
                
                    
                <div class="content mt-3">
                 <div class="col-lg-12">                     
                  <div class="assist-content-area"> 
                 <div class="services-content" style="padding-bottom:75px;">           
                 <!----------------------------------------------- ---->
      
                
          <table id="contacttable" class="table table-striped table-bordered table-sm table-list" cellspacing="0" width="100%">
           <thead>
           <tr>
           <th style="font-size: 13px;" scope="col">Information</th>
           
           </tr>
           </thead>
           </table> 
           <table id="contacttable" class="table table-striped " cellspacing="0" width="100%">
                <apex:repeat value="{!KnowledgeArticle1}" var="objK"> 
                <tbody>
                
                <tr>
                <td >Article Number</td>
                <td ><apex:outputField value="{!objK.ArticleNumber}"/></td>
                </tr>
            
                <tr>
                <td >Title   </td>
                <td ><apex:outputField value="{!objK.title}"/></td>
                </tr>
                
               <apex:repeat value="{!KnowledgeArticle1}" var="objK1">  
                <tr>
                <td >Summary</td>
                <td ><apex:outputField value="{!objK1.Summary}"/></td>
                </tr>
                </apex:repeat>
                </tbody>
                </apex:repeat>
                </table>
             <table id="contacttable" class="table table-striped table-bordered table-sm table-list" cellspacing="0" width="100%">
           <thead>
           <tr>
           <th style="font-size: 13px;" scope="col">Article Details</th>
           
           </tr>
           </thead>
           </table>
           <table id="contacttable" class="table table-striped" cellspacing="0" width="100%">
                <apex:repeat value="{!KnowledgeArticle1}" var="objK"> 
                <tbody>
                <tr>
                <th >Question</th></tr>
                <tr>
                <td ><apex:outputText value="{!objK.Question__c}" escape="false"/></td>
                </tr>
                
                <tr>
                <th >Answer   </th></tr>
                <tr>
                <td ><apex:outputText value="{!objK.Answer__c}" escape="false"/></td>
                </tr>
                
                </tbody>
                </apex:repeat>
                </table>
           
           
            <table id="contacttable" class="table table-striped table-bordered table-sm table-list" cellspacing="0" width="100%">
           <thead>
           <tr>
           <th style="font-size: 13px;" scope="col">Article Properties</th>
           
           </tr>
           </thead>
           </table> 
          <table id="contacttable" class="table table-striped" cellspacing="0" width="100%">
                <apex:repeat value="{!KnowledgeArticleVersion}" var="objK1"> 
                <tbody>
                <tr>
                <td >Article Created Date</td>
                <td ><apex:outputField value="{!objK1.ArticleCreatedDate}"/></td>
                </tr>
               
                <tr>
                <td style="width:50%">Last Published Date </td>
                <td style="width:40%"><apex:outputField value="{!objK1.LastPublishedDate}"/></td>
                </tr>
                
                </tbody>
                </apex:repeat>
                </table>
                
            
                 <!------------------------------------------------- --->
                </div> <!-- .content -->
            </div><!-- /#right-panel -->            
            </div></div></div>
            
            <!-- Right Panel -->
        </apex:form>        
        <c:Flame_FooterResource />
        
    </body>
</apex:page>