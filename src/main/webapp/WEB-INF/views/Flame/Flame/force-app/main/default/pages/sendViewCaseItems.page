<apex:page docType="html-5.0" controller="ViewCaseItemsController" showHeader="false" sidebar="false" cache="false" title="FLAME University - The Pioneers of Liberal Education in India" renderAs="pdf" >

 
 
    
    <body>
        <apex:form id="frmId">
        
                    <table border="0" cellpadding="0" cellspacing="0" style="page-break-inside:auto;font-family:sans-serif; width:100%">
                        <tbody>
                        <tr>
                            <td style="padding:10px; font-size: 12px;">
                            <apex:image url="{!URLFOR($Resource.flameZip, 'img/logo.png')}" width="150px;"/>
                            </td>
                        </tr>
                        </tbody>
                    </table>      
    
            <div id="right-panel">                
               
                <div>          
                    <div >
                        <div >
                           
                             <div>
                            
                             
                            <html>  
                           
                            <table border="0" class="list" cellspacing="0" cellpadding="0" width="100%">
                            <tbody>
                                <tr>  
                                    <td style="text-align: left; font-weight:bold;">Name of the Faculty:</td> 
                                    <td style="text-align: left;"> {!lstofcase[0].Contact.Name}</td>
                                    <td style="text-align: left; font-weight:bold;">Date:</td> 
                                    <td style="text-align: left;"><apex:outputText value="{0,date,DD/MM/YYYY}"> <apex:param value="{!lstofcase[0].CreatedDate}"/></apex:outputText></td>
                                </tr>
                                    <td style="text-align: left; font-weight:bold;">Faculty:</td> 
                                    <td style="text-align: left;"> {!lstofcase[0].Contact.Faculty__c}</td>
                                    <td style="text-align: left; font-weight:bold;">Type:</td> 
                                    <td style="text-align: left;"> {!lstofcase[0].BR_TYPE__c}</td>
                            <tr>
                                    <td style="text-align: left; font-weight:bold;">Contact Number:</td> 
                                    <td style="text-align: left;"> {!lstofcase[0].contact.MobilePhone}</td>
                                    <td style="text-align: left; font-weight:bold;">Course:</td> 
                                    <td style="text-align: left;"> {!lstofcase[0].BR_COURSE__c}</td>
                            </tr>
                                    <td style="text-align: left; font-weight:bold;">Email ID:</td> 
                                    <td style="text-align: left;">{!lstofcase[0].contact.Email}</td>
                                    <td style="text-align: left; font-weight:bold;">Number of Students:</td> 
                                    <td style="text-align: left;"> {!lstofcase[0].BR_Number_of_Students__c}</td>
                            </tbody>
                            </table>
                            </html> 
                            </div>  
                           
                           
                                <div>
                                    
                                    <apex:pageBlock id="pbId">
                                        
                                       <html>
                            <table style="margin-top:20px; margin-bottom:10px;" BORDERCOLOR= "#e9ecef" border="1" align="center" class="slds-table--bordered slds-table--striped slds-button--" cellspacing="0" cellpadding="0">
                            <tr class="headerRow" >
                            <td rowspan="2" style="text-align: center; font-weight:bold;" >Title</td>
                            <td rowspan="2" style="text-align: center; font-weight:bold;" >Author</td>
                             <td rowspan="2" style="text-align: center; font-weight:bold;" >Publisher</td>
                            <td rowspan="2" style="text-align: center; font-weight:bold; width:120px;" >Year/Edition</td>
                            <td rowspan="2" style="text-align: center; font-weight:bold; width:440px;" >ISBN</td>
                            <td rowspan="2" style="text-align: center; font-weight:bold; width:440px;" >Required Copies</td>
                            </tr>
                            
                                                <tbody>
                                                    <apex:repeat value="{!ItemswrapperList}" var="page" id="table"> 
                                                    <tr> 
                                                       <td style="text-align: center;"> <apex:outputField value="{!page.item.BR_Title__c}"/> </td>
                                                        <td style="text-align: center;"> <apex:outputField value="{!page.item.BR_Author__c}" /> </td>
                                                        <td style="text-align: center;"> <apex:outputField value="{!page.item.BR_Publisher__c}" /> </td>
                                                        <td style="text-align: center;"> <apex:outputField value="{!page.item.BR_Year_Ed__c}" /> </td>
                                                        <td style="text-align: center;"> <apex:outputField value="{!page.item.BR_ISBN__c}" /> </td>
                                                        <td style="text-align: center;"> <apex:outputField value="{!page.item.BR_Required_Copies__c}" /> </td>
                                                       </tr>
                                                    </apex:repeat> 
                                                </tbody>  
                                            </table> 
                                        </html> 
                                    </apex:pageBlock>
                                </div>     
                          
                        </div>
                    </div>
                </div> 
            </div>
        </apex:form>
    </body>
</apex:page>