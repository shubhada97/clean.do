                    <div class="col-sm-6" id="fromdate">
                    <div class="slds-form-element" >
                    <label class="slds-form-element__label" >Heading <span style="color:red">*</span></label>
                    <div class="slds-form-element__control  ">                                    
                    <apex:inputField styleClass="slds-input locationIF" value="{!emp.Heading__c}" required="true"/>
                    
                    </div>
                    <span class="fromdateMsg errorMsg"></span>
                    </div> 
                    </div> 
                    
                    
                    <div class="col-sm-7" >
                    <div class="slds-form-element" >
                    <label class="slds-form-element__label" >Content <span style="color:red">*</span></label>
                    <div class="slds-form-element__control">                                    
                    <apex:inputField styleClass="slds-input requiredWebSite" value="{!emp.Content__c}" required="true" />
                    
                    </div>
                    <span class="todateMsg errorMsg"></span>
                    </div>
