       <script type="text/javascript">
                function validateForm() {
                    try {
                        var fNameObj = document.getElementById("{!$Component.myForm.fName}");
                        var errObj = document.getElementById("{!$Component.myForm.errMsg}");
                        if (fNameObj.value.length == 0) {
                            errObj.innerHTML = "Please Upload Image file."
                            return false;
                        }
                        return true;
                    } catch (e) {
                        alert(e);
                        return false;
                    }
                
                }           
            </script>                            
